{
  "name": "@jrmc/adonis-unpoly",
  "version": "1.0.0-beta",
  "type": "module",
  "description": "Provider and middleware unpoly for adonisjs",
  "engines": {
    "node": ">=20.12.0"
  },
  "main": "build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/batosai/adonis-unpoly.git"
  },
  "author": "Jeremy Chaufourier jeremy@chaufourier.fr",
  "license": "MIT",
  "keywords": [
    "providers",
    "middleware",
    "unpoly",
    "adonisjs"
  ],
  "files": [
    "build"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "prepublishOnly": "npm run build",
    "format": "prettier --write ."
  },
  "exports": {
    ".": "./build/index.js",
    "./unpoly_provider": "./build/providers/unpoly_provider.js",
    "./unpoly_middleware": "./build/src/unpoly_middleware.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.7.0",
    "@adonisjs/core": "^6.10.1",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@types/node": "^20.14.2",
    "prettier": "^3.3.1",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5"
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./providers/unpoly_provider.ts",
      "./src/unpoly_middleware.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "beta"
  },
  "volta": {
    "node": "20.12.0"
  }
}
